{
	"parser": "babel-eslint",
	"env": {
		"node": true,
		"es6": true
	},
	"extends": ["eslint:recommended", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"max-len": [
			"error",
			{
				"code": 120
			}
		]
	},
	"overrides": [
		{
			"files": ["src/assets/*", "*.babel.js"],
			"env": {
				"node": false,
				"browser": true
			}
		}
	]
}
