{
	"imports": {
		"lume/": "https://deno.land/x/lume@v2.1.3/"
	},
	"tasks": {
		"lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
		"build": "TERMINATE_AFTER_BUILD=1 deno task lume -s",
		"serve": "deno task lume -s"
	},
	"compilerOptions": {
		"types": [
			"lume/types.ts"
		]
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"semiColons": true,
		"singleQuote": true,
		"include": [""],
		"exclude": ["_site", "src/_cache", ".git", "LICENSE.md"]
	}
}
